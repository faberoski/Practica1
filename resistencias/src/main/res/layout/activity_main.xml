<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.resistencias.MainActivity">
    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textSize="35sp"
            android:layout_margin="1dp"
            android:background="@color/silver"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/eNumero"
            />
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">
        >

        <Button style="@style/ButtonStye"
            android:id="@+id/negro"
            android:text=""
            android:background="@color/black"
            />

        <Button style="@style/ButtonStye"
            android:id="@+id/verde"
            android:text=""
            android:background="@color/green"
            />

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">

        <Button style="@style/ButtonStye"
            android:id="@+id/cafe"
            android:text=""
            android:background="@color/saddlebrown"
            />

        <Button style="@style/ButtonStye"
            android:id="@+id/azul"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStye"
            android:id="@+id/rojo"
            android:text=""
            android:background="@color/red"
            />

        <Button style="@style/ButtonStye"
            android:id="@+id/violeta"
            android:text=""
            android:background="@color/purple"
            />

    </LinearLayout>
    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStye"
            android:id="@+id/naranja"
            android:text=""
            android:background="@color/darkorange"
            />
        <Button style="@style/ButtonStye"
            android:id="@+id/gris"
            android:text=""
            android:background="@color/gray"
            />
    </LinearLayout>
    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStye"
            android:id="@+id/amarillo"
            android:text=""
            android:background="@color/yellow"
            />
        <Button style="@style/ButtonStye"
            android:id="@+id/blanco"
            android:text=""
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout style="@style/LayoutStyle"
        android:layout_height="wrap_content">

        <Button style="@style/ButtonStye"
            android:id="@+id/clr"
            android:text="clr"
            />

